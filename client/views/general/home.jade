.row
  .col-xs-4.col-xs-offset-4
    h1 Discover
    input.form-control(type='text', ng-model='location', placeholder='city, state, region, etc') 
    button.btn.btn-info.btn-lg.center-block(ng-click='findLocation(location)') Discover
    
.row
  .col-xs-4.col-xs-offset-4
      h3(ng-show='isClicked') Gallery:
      
      img#gallery(ng-src='https://farm{{photos[0].farm}}.staticflickr.com/{{photos[0].server}}/{{photos[0].id}}_{{photos[0].secret}}.jpg')
        
.row
  h3(ng-show='isClicked') Information:
  .col-xs-2.col-xs-offset-2.weather
    img(ng-src='{{weather.icon_url}}')
    h2 {{weather.conditions}}
    h2(ng-show='isClicked') Low: {{weather.low.fahrenheit}} &#186;
    h2(ng-show='isClicked') High: {{weather.high.fahrenheit}} &#186;
    h2(ng-show='isClicked') Humidity: {{weather.avehumidity}}%
      
  .col-xs-2.col-xs-offset-1
    #mapDiv
.row
  .col-xs-4.col-xs-offset-4    
    h2(ng-show='isClicked'): a(ng-href='http://en.wikipedia.org/?curid={{pageId}}') Wikipedia Article
    
    
    
